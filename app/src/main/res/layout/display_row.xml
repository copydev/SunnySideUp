<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sunny_side_up"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/row_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9:00 AM"
        android:layout_toEndOf="@id/row_icon"
        android:layout_toStartOf="@id/row_temp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:textColor="#80000000"
        app:fontFamily="@font/boldfont"
        android:fontFamily="@font/boldfont"
        android:textSize="22sp"
        android:textAlignment="viewStart"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/row_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_below="@id/row_time"
        android:layout_alignStart="@id/row_time"
        android:textColor="#99000000"
        app:fontFamily="@font/boldfont"
        android:fontFamily="@font/boldfont"
        android:textSize="18sp"
        android:textAlignment = "viewStart"
        android:layout_toEndOf="@id/row_icon"
        android:layout_toStartOf="@id/row_temp"/>

    <TextView
        android:id="@+id/row_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54Â°"
        android:layout_marginStart="2dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:textColor="#000000"
        app:fontFamily="@font/boldfont"
        android:fontFamily="@font/boldfont"
        android:textSize="42sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"/>


</RelativeLayout>